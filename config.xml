<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="com.fieldsolution.catwheel" ios-CFBundleVersion="1" version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Cat Wheel</name>
  <description>A Vuetify project running in Cordova</description>
  <author email="dev@cordova.apache.org" href="http://cordova.io">
    Apache Cordova Team
  </author>
  <content src="index.html"/>
  <preference name="DisallowOverscroll" value="true"/>
  <plugin name="cordova-plugin-whitelist" spec="0"/>
  <preference name="orientation" value="portrait"/>
  <preference name="AutoHideSplashScreen" value="false"/>
  <preference name="SplashScreenBackgroundColor" value="#000F21"/>
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <preference name="FadeSplashScreen" value="false"/>
  <preference name="SplashScreenDelay" value="1000"/>
  <preference name="SplashMaintainAspectRatio" value="true"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <icon density="ldpi" src="res/icon/icon-36.png"/>
  <icon density="mdpi" src="res/icon/icon-48.png"/>
  <icon density="hdpi" src="res/icon/icon-72.png"/>
  <icon density="xhdpi" src="res/icon/icon-96.png"/>
  <icon density="xxhdpi" src="res/icon/icon-144.png"/>
  <icon density="xxxhdpi" src="res/icon/icon-192.png"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <plugin name="cordova-plugin-statusbar" spec="^2.4.2"/>
  <plugin name="cordova-plugin-dialogs" spec="^2.0.1"/>
  <plugin name="cordova-plugin-camera" spec="^4.0.3"/>
  <plugin name="cordova-sqlite-storage" spec="^2.3.3"/>
  <plugin name="cordova-plugin-email-composer" spec="^0.8.15"/>
  <plugin name="cordova-plugin-ble-central" spec="^1.2.2"/>
  <engine name="browser" spec="^5.0.3"/>
  <engine name="android" spec="^7.1.4"/>

  <platform name="android">
    <splash src="res/screen/android/splash-port-xhdpi.png" density="port-xhdpi"/>
    <splash src="res/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
    <splash src="res/screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi"/>
  </platform>

  <platform name="ios">
    <splash src="res/screen/ios/Default@2x~universal~comany.png"/>
    <splash src="res/screen/ios/Default@3x~universal~comany.png"/>
  </platform>
</widget>
